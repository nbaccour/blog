{% extends 'base.html.twig' %}

{% block titlePage %}
    <div class="row">
        <div class="col-md-6">
            <h2 class="mb-4">Les ommentaire</h2>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="col-md-12 col-lg-8 main-content">
        <div class="row">
            <div class="table-responsive-xl">

                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Article</th>
                        <th scope="col">Auteur</th>
                        <th scope="col">Commentaire</th>
                        <th scope="col">Date</th>
                        <th scope="col">..</th>
                        <th scope="col">..</th>
                    </tr>
                    </thead>
                    <tbody>
                    <div id="userdeleted"></div>
                    {% for commentshow in comments %}
                        <tr id="id_{{ commentshow.id }}">
                            <td scope="row">{{ commentshow.title }}</td>
                            <td>{{ commentshow.firstname }}</td>
                            <td>{{ commentshow.comment }}</td>
                            <td>{{ commentshow.createDate }}</td>
                            <td>
                                <a href="?action=formcomment&id={{ commentshow.id }}">
                                    <span class="fa fa-edit"></span>
                                </a>
                            </td>
                            <td>
            <span data-id="{{ commentshow.id }}" class="fa fa-trash-o deleteomment"
                  data-name="supprimer"></span>

                            </td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}