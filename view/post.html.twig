                    <ul class="comment-list">
                        {% for commentParent in comments %}
                            <li class="comment">
                                <div class="vcard">
                                    <img src="public/images/person_1.jpg" alt="Image placeholder">
                                </div>
                                <div class="comment-body">
                                    <h3>{{ commentParent.firstname }}</h3>
                                    <div class="meta">{{ commentParent.createDate }}</div>
                                    <p>{{ commentParent.comment }}</p>
                                    <p><a href="#" class="reply rounded">Reply</a></p>
                                </div>
                                {% if  commentParent.commentChild %}
                                    <ul class="children">
                                        {% for testtest in commentChild %}
                                            <li class="comment">
                                                <div class="vcard">
                                                    <img src="public/images/person_1.jpg" alt="Image placeholder">
                                                </div>
                                                <div class="comment-body">
                                                    <h3>{{ testtest.firstname }}</h3>
                                                    <div class="meta">{{ testtest.createDate }}</div>
                                                    <p>{{ testtest.comment }}</p>
                                                    <p><a href="#" class="reply rounded">Reply</a></p>
                                                </div>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                            </li>
                        {% endfor %}
